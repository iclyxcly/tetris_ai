set -e
if [ -z $1 ]; then
    echo "Usage: ./build.sh <filename>"
    exit 1
fi
if [ ! -f $1.cpp ]; then
    echo "File not found!"
    exit 1
fi
clang++ -o $1 $1.cpp -O3 -g -fno-inline -fprofile-instr-generate -ffast-math -funroll-loops -ftree-vectorize -std=c++23 -lixwebsocket -lz -lssl -lcrypto -pipe
./$1
llvm-profdata merge -o default.profdata default.profraw
clang++ -o $1 $1.cpp -O3 -fno-inline -g -fprofile-instr-use=default.profdata -ffast-math -funroll-loops -ftree-vectorize -std=c++23 -lixwebsocket -lz -lssl -lcrypto -pipe
rm default.prof*
valgrind --tool=callgrind --callgrind-out-file=callgrind.out ./$1
kcachegrind callgrind.out
rm callgrind.out