set -e
if [ -z $1 ]; then
    echo "Usage: ./build.sh <filename>"
    exit 1
fi
if [ ! -f $1.cpp ]; then
    echo "File not found!"
    exit 1
fi
clang++ -o $1 $1.cpp -Ofast -fprofile-instr-generate -funroll-loops -ftree-vectorize -flto -march=native -std=c++23 -lixwebsocket -lz -lssl -lcrypto -pipe
./$1 > /dev/null
llvm-profdata merge -o default.profdata default.profraw
clang++ -o $1 $1.cpp -Ofast -fprofile-instr-use=default.profdata -funroll-loops -ftree-vectorize -flto -march=native -std=c++23 -lixwebsocket -lz -lssl -lcrypto -pipe
rm default.prof*
./$1