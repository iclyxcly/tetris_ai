if [ -z $1 ]; then
    echo "Usage: ./build.sh <filename>"
    exit 1
fi
if [ ! -f $1.cpp ]; then
    echo "File not found!"
    exit 1
fi
clang++ -o $1 $1.cpp -O3 -g -std=c++23 -lixwebsocket -lz -lssl -lcrypto -mcmodel=small && valgrind --tool=callgrind ./$1 && kcachegrind callgrind.out.* && rm callgrind.out.*
